<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9"
    android:background="@android:color/white"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
           android:src="@drawable/welcome"
           android:background="@color/colorPrimary"
            android:gravity="center"
            android:textSize="50sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textSize="20sp"
            android:text="This user friendly app is designed by ITsoch to provide loadshedding schedule throughout sunsari district.
             \nFor now, Sunsari Loadshedding App only offers above mentioned feature but in future ITsoch will regular update this app with new features included.
             \nITsoch-Let's Think IT.
              \nFacebook(facebook/itsoch1)
               \nWebsite(itsoch.com)
                "

            android:background="@android:color/white"
           />
    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>